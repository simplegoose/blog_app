<div class="users">
  <h1>Users</h1>
  <% @users.each do |user| %>
    <%= link_to "/users/#{user.id}" do %>
    <div class="user-info-wrapper">
      <%= image_tag user.photo, :class => 'user-avatar' %>
      <div class="user-details">
        <p><%= user.name %></p>
        <span>Number of posts: <%= user.post_counter %></span>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
