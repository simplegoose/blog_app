<article class="main-article">
  <%= render partial: '/shared/user', locals: { user: @user } %>
  
  <div class="bio">
    <h3>Bio</h3>
    <p><%= @user.bio %></p>
  </div>

  <% @user.recent_posts.each_with_index do |post, index| %>
    <%= link_to "/users/#{@user.id}/posts/#{post.id}" do %>
      <%= render partial: '/shared/post', locals: { post: post } %>
    <% end %>
  <% end %>

  <%= link_to "See all posts", "/users/#{@user.id}/posts", :class => 'see-all-link' %>
</article>
